
@{
    ViewBag.Title = "ChangeDay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Change Day</h2>
 
<p>Please select the day you would like to have your trash picked up from the dropdown menu.</p>


@using (Html.BeginForm("ChangeDay", "Customer", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Pick Up Day", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @*@Html.DropDownList("Name")*@
            @Html.DropDownList("PickUpDay", (SelectList)ViewBag.Name, "Days")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit Day" />
        </div>
    </div>
}

